namespace cml.examples

import cml.lang.solidity.*

transaction InitTransaction
	Duration biddingTime
	Party beneficiary

@Ownable @PullPayment
contract SimpleAuction
	Integer highestBid
	Party highestBidder
	Duration biddingTime
	Party beneficiary

	clause Bid
		due within biddingTime after contractStart
		party anyone
		may bid

	clause AuctionEnd
		//due after contractStart.addDuration(biddingTime)
		due after clause Bid fulfilled
		party beneficiary
		must receivePayment

	init(InitTransaction init)
		biddingTime = init.biddingTime
		beneficiary = init.beneficiary

	bid(Integer amount)
		ensure(amount > highestBid, "There already is a higher bid.")
		caller.token.transfer(this, amount)
		if (highestBid != 0)
			token.transfer(highestBidder, highestBid)
		highestBidder = caller
		highestBid = amount

	receivePayment()
		token.transfer(beneficiary, highestBid)